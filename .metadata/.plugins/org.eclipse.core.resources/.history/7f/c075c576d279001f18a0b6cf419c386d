package diadasemana;

import javax.swing.JOptionPane;

public class DiadaSemana {

	public static void main(String[] args) {
		// Nomeando as variáveis
		
		String DiaSemana = null, Domingo, Segunda, Terça, Quarta, Quinta, Sexta, Sábado;
		JOptionPane.showInputDialog("Digite em qual dia da semana estamos: ");
		
		if (DiaSemana.equalsIgnoreCase(null, Domingo));
		JOptionPane.showMessageDialog(null, "Hoje é um final de semana.");
		

	}

}
